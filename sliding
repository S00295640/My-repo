using UnityEngine;

public class RollerMovement : MonoBehaviour
{
    public float acceleration = 20f;
    public float maxSpeed = 8f;
    public float turnSpeed = 6f;

    Rigidbody rb;

    void Start()
    {
        rb = GetComponent<Rigidbody>();
    }

    void FixedUpdate()
    {
        float move = Input.GetAxis("Vertical");   // W / S
        float turn = Input.GetAxis("Horizontal"); // A / D

        // Avancer avec inertie
        rb.AddForce(transform.forward * move * acceleration, ForceMode.Acceleration);

        // Limite de vitesse
        if (rb.linearVelocity.magnitude > maxSpeed)
        {
            rb.linearVelocity = rb.linearVelocity.normalized * maxSpeed;
        }

        // Tourner (pas instantan√©)
        transform.Rotate(Vector3.up * turn * turnSpeed);
    }
}

